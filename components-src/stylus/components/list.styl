// NOTE: You can't use @extend that break component independent and topdoc parsing.

// internal variables
var-background-color--list := #F0EFF4
var-background-color--list-container := #fff
var-background-color--list-header := #f0eff4
var-color--list-header := #1F1F21
var-color--list-item := #1F1F21
var-background-color--list-item := #fff
var-background-color--list-item--active := #D9D9D9
var-list-item-separator-color := #ddd

var-padding--list-container = 0
var-font-size--list-header = 15px
var-border-top--list-container = 1px solid var-list-item-separator-color
var-border-bottom--list-container = 1px solid var-list-item-separator-color
var-border-top--list-item--2 = 1px solid var-list-item-separator-color
var-border-bottom--list-item = 1px solid var-list-item-separator-color
var-margin--list-item = 0 0 0 0
var-padding--list-item = 0 0 0 10px
var-padding--list-header = 0 0 0 10px
var-padding-left--list-item--first = 10px
var-padding-left--list-item--last = 10px
var-margin--list-item--first = 0
var-margin--list-item--last = 0
var-min-height--list-item = 44px
var-min-height--list-header = 24px
var-border-top--list = none
var-border-bottom--list-item--first = none
var-border-top--list-item--last = none
var-border-top--list-item--first = none
var-border-top--list-item = none
var-border-bottom--list-item--last = none
var-border-top--list-header = none
var-border-bottom--list-header = none
var-text-shadow--list-header = none
var-font-weight--list-header = var-font-weight--large



/*! topdoc
  name: List
  class: list
  markup:
    <div class="list">
      <ul class="list__container">
        <li class="list__item">
          <span class="list__item__line-height">Item</span>
        </li>
        <li class="list__item">
          <span class="list__item__line-height">Item</span>
        </li>
      </ul>
    </div>
*/

list()
  reset-base()
  reset-cursor()
  reset-font()
  overflow auto
  -webkit-overflow-scrolling touch

list__header()
  margin 0
  text-align left

list__container()
  reset-list()

list__item()
  margin 0
  padding 0
  position relative
  list-style none
  box-sizing border-box

.list
  list()
  border-top var-border-top--list-container
  border-bottom var-border-bottom--list-container
  background-color var-background-color--list

.list--noborder
  border-top none
  border-bottom none

.list__header
  list__header()
  padding var-padding--list-header
  font-size var-font-size--list-header
  font-weight var-font-weight--list-header
  background-color var-background-color--list-header
  color var-color--list-header
  text-shadow var-text-shadow--list-header
  border-top var-border-top--list-header
  border-bottom var-border-bottom--list-header
  min-height var-min-height--list-header
  line-height @min-height

.list__container
  list__container()
  border-top var-border-top--list
  padding var-padding--list-container
  background-color var-background-color--list-container

.list__item
  list__item()
  padding var-padding--list-item
  margin var-margin--list-item
  border-top var-border-top--list-item
  border-bottom var-border-bottom--list-item
  color var-color--list-item
  background-color var-background-color--list-item
  min-height var-min-height--list-item
  position relative

.list__item__line-height
  line-height var-min-height--list-item

.list__item_active:active
  background-color var-background-color--list-item--active
  transition none

.list__item:first-child
  padding-left var-padding-left--list-item--first
  margin var-margin--list-item--first
  border-top var-border-top--list-item--first
  border-bottom var-border-bottom--list-item--first

.list__item:last-child
  padding-left var-padding-left--list-item--last
  margin var-margin--list-item--last
  border-top var-border-top--list-item--last
  border-bottom var-border-bottom--list-item--last

.list__item:nth-child(2)
  border-top var-border-top--list-item--2

/*! topdoc
  name: Noborder List
  class: list--noborder
  use: List
  markup:
    <div class="list--noborder">
      <ul class="list__container">
        <li class="list__item">
          <span class="list__item__line-height">Item</span>
        </li>
        <li class="list__item">
          <span class="list__item__line-height">Item</span>
        </li>
      </ul>
    </div>
 */

.list--noborder
  list()
  border-top var-border-top--list-container
  border-bottom var-border-bottom--list-container
  background-color var-background-color--list
  border-top none
  border-bottom none

/*! topdoc
  name: Category List Header
  class: list__header
  use: List
  markup:
    <div class="list">
      <h3 class="list__header">Category</h3>
      <ul class="list__container">
        <li class="list__item list__item__line-height">
          Item
        </li>
      </ul>
    </div>
 */

/*! topdoc
  name: Tappable List
  class: list__item--tappable
  use: List
  markup:
    <div class="list">
      <ul class="list__container">
        <li class="list__item--tappable">
          <span class="list__item__line-height">Tappable Item</span>
        </li>
      </ul>
    </div>
 */

.list__item--tappable
  list__item()
  padding var-padding--list-item
  margin var-margin--list-item
  border-top var-border-top--list-item
  border-bottom var-border-bottom--list-item
  color var-color--list-item
  background-color var-background-color--list-item
  min-height var-min-height--list-item
  position relative
  transition background-color 0.2s linear

.list__item--tappable:active
  background-color var-background-color--list-item--active
  transition none

.list__item--tappable:first-child
  padding-left var-padding-left--list-item--first
  margin var-margin--list-item--first
  border-top var-border-top--list-item--first
  border-bottom var-border-bottom--list-item--first

.list__item--tappable:last-child
  padding-left var-padding-left--list-item--last
  margin var-margin--list-item--last
  border-top var-border-top--list-item--last
  border-bottom var-border-bottom--list-item--last

.list__item--tappable:nth-child(2)
  border-top var-border-top--list-item--2


// global variables
var-input-bg-color := #fff
var-input-border-color := #ddd
var-input-text-color := #1F1F21
var-input-placeholder-color := #ccc
var-input-invalid-border-colr := #f00
var-input-invalid-text-color := #f00

// Font
var-font-size = 18px
var-font-size--large = 18px
var-font-weight = 400
var-font-weight--large = 500
var-letter-spacing = 0
var-text-color := #1f1f21

// Input
var-background-color--input = transparent
var-box-shadow--text-input = none
var-thumb-size = 29px
var-background--body = var-secondary-color
var-box-shadow = none
var-box-shadow--down = none
var-text-shadow = 0 1px none
var-round-border = 30px
var-border-radius = 4px
var-border-radius--large = 0
var-color-invalid = var-input-invalid-text-color
var-border--invalid = 1px solid var-input-invalid-border-colr
var-input-border = 1px solid var-input-border-color

html
  width 100%
  height 100%

body
  width 100%
  height 100%
  position fixed
  margin 0
  padding 0

*:not(input, textarea, select)
  user-select none

*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

input:active, input:focus, textarea:active, textarea:focus, select:active, select:focus
  outline none

// NOTE: You can't use @extend that break component independent and topdoc parsing.

// internal variables
var-background-color__button := #1284ff
var-color__button := white
var-background-color--cta := #4CDA64
var-quiet-button-color := #1284ff

var-text-shadow--cta = none
var-border__button--quiet = none
var-quiet-button-background = transparent
var-color--button--active = var-color__button
var-background-color--down__button = var-background-color__button
var-background-color--quiet-active = transparent
var-box-shadow--cta = none
var-box-shadow--cta--down = none
var-background-color--cta--down = var-background-color--cta
var-color--cta = white
var-color--cta--down = white

/*! topdoc
  name: Button
  class: button
  modifiers:
    :active: Active state
    :disabled: Disabled state
    :focus: Focused
  markup:
    <button class="button">Button</button>
    <button class="button" disabled>Button</button>
*/

button--quiet()
  reset-quiet()

button--disabled()
  disabled()

button--hover()
  transition none

button()
  inline-block()
  reset-box-model()
  reset-base()
  reset-font()
  reset-cursor()
  ellipsis()
  height auto
  text-decoration none
  padding var-padding
  font-size var-font-size
  line-height var-line-height
  letter-spacing var-letter-spacing
  color var-color__button
  text-shadow var-text-shadow
  vertical-align var-vertical-align
  background-color var-background-color__button
  box-shadow var-box-shadow
  border none
  border-radius var-border-radius
  transition background-color 0.2s linear, color 0.2s linear, opacity 0.2s linear
  font-weight var-font-weight

button--focus()
  box-shadow none
  outline 0

button--active()
  background-color var-background-color--down__button
  box-shadow var-box-shadow--down
  color var-color--button--active
  transition none
  opacity 0.6

.button
  button()

.button:hover
  button--hover()

.button:active
  button--active()

.button:focus
  button--focus()

.button:disabled
  button--disabled()

/*! topdoc
  name: Quiet Button
  class: button--quiet
  markup:
    <button class="button--quiet">Button</button>
    <button class="button--quiet" disabled>Button</button>
*/

.button--quiet
  button()
  button--quiet()
  background var-quiet-button-background
  color var-quiet-button-color
  border none

.button--quiet:disabled
  button--disabled()
  border none

.button--quiet:hover
  button--hover()

.button--quiet:focus
  button--focus()

.button--quiet:active
  color var-color--active__button--quiet
  text-shadow var-text-shadow
  background-color var-background-color--quiet-active
  border none
  box-shadow var-box-shadow--down
  transition none
  opacity 0.6

/*! topdoc
  name: Large Button
  class: button--large
  markup:
    <button class="button--large">Button</button>
*/

.button--large
  button()
  font-size var-font-size--large
  font-weight var-font-weight--large
  line-height var-line-height--large
  padding var-padding--large
  display block
  width 100%

.button--large:active
  button--active()
  transition none

.button--large:disabled
  button--disabled()

.button--large:hover
  button--hover()

.button--large:focus
  button--focus()

/*! topdoc
  name: Large Quiet Button
  class: button--large--quiet
  markup:
    <button class="button--large--quiet">Button</button>
*/

.button--large--quiet
  button()
  font-size var-font-size--large
  font-weight var-font-weight--large
  line-height var-line-height--large
  padding var-padding--large
  display block
  width 100%
  button--quiet()
  color var-quiet-button-color

.button--large--quiet:active
  color var-color--active__button--quiet
  transition none
  opacity 0.6

.button--large--quiet:disabled
  button--disabled()

.button--large--quiet:hover
  button--hover()

.button--large--quiet:focus
  outline 0

/*! topdoc
  name: Call To Action Button
  class: button--cta
  markup:
    <button class="button--cta">Button</button>
    <button class="button--cta" disabled>Button</button>
*/

.button--cta
  button()
  border none
  background-color var-background-color--cta
  box-shadow var-box-shadow--cta
  color var-color--cta
  text-shadow var-text-shadow--cta

.button--cta:hover
  button--hover()

.button--cta:focus
  button--focus()

.button--cta:active
  color var-color--cta--down
  background-color var-background-color--cta--down
  box-shadow var-box-shadow--cta--down
  transition none
  opacity 0.6

.button--cta:disabled
  button--disabled()


/*! topdoc
  name: Large Call To Action Button
  class: button--large--cta
  markup:
    <button class="button--large--cta" >Button</button>
*/

.button--large--cta
  button()
  border none
  background-color var-background-color--cta
  box-shadow var-box-shadow--cta
  color var-color--cta
  text-shadow var-text-shadow--cta
  font-size var-font-size--large
  font-weight var-font-weight--large
  line-height var-line-height--large
  padding var-padding--large
  width 100%
  display block

.button--large--cta:hover
  button--hover()

.button--large--cta:focus
  button--focus()

.button--large--cta:active
  color var-color--cta--down
  background-color var-background-color--cta--down
  box-shadow var-box-shadow--cta--down
  transition none
  opacity 0.6

.button--large--cta:disabled
  button--disabled()

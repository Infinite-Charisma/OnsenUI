// internal variables
var-color--icon-button := #1284ff
var-background-color--icon-button := rgba(0, 0, 0, 0)
var-icon-button-border-color := #1284ff

var-icon-button-border-radius = 3px
var-padding--icon-button = 4px 10px
var-icon-top = 0
var-icon-top--large = 0px
var-box-shadow--icon-button-quiet--down = none
var-background-color--icon-button--active = var-background-color--icon-button
var-border--icon-button = 1px solid var-icon-button-border-color
var-color--icon-button--quiet = var-color--icon-button
var-color--icon-button--quiet--active = var-color--icon-button--quiet

// NOTE: You can't use @extend that break component independent and topdoc parsing.

/*! topdoc
  name: Icon Button
  class: icon-button
  modifiers:
    :active: Active state
    :disabled: Disabled state
    :focus: Focused
  markup:
    <button class="icon-button">
      <i class="fa fa-bell" style="font-size:17px"></i> Label
    </button>

    <button class="icon-button--quiet">
      <i class="fa fa-bell" style="font-size:17px"></i> Label
    </button>
*/

.icon-button
  reset-font()
  padding var-padding--icon-button
  letter-spacing var-letter-spacing
  color var-color--icon-button
  text-shadow var-text-shadow
  vertical-align baseline
  background-color var-background-color--icon-button
  box-shadow var-box-shadow
  border var-border--icon-button
  border-radius var-icon-button-border-radius
  font-weight var-font-weight
  font-size var-font-size
  transition opacity 0.2s linear
  vertical-align middle

.icon-button:active
  background-color var-background-color--icon-button--active
  transition none
  opacity 0.6

.icon-button:disabled
  disabled()

.icon-button:focus
  outline 0

.icon-button--quiet
  @extend .icon-button
  button--quiet()
  background-color transparent
  border none
  color var-color--icon-button--quiet

.icon-button--quiet:active
  @extend .icon-button:active
  color var-color--icon-button--quiet--active
  text-shadow var-text-shadow
  background-color transparent
  border none
  box-shadow var-box-shadow--icon-button-quiet--down

.icon-button--quiet:disabled
  @extend .icon-button:disabled

.icon-button--quiet:focus
  @extend .icon-button:focus


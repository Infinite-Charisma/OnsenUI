// NOTE: You can't use @extend that break component independent and topdoc parsing.

// internal variables

var-switch-background-color := #ddd
var-background-color--switch__label--checked := #4CD964 // background color active
var-switch-thumb-background-color := #fff
var-swtich-thumb-border-color := #ddd
var-swtich-thumb-border-color-active := #4CD964

var-height--switch = 32px
var-width--switch = 51px
var-switch--border-radius = 30px
var-transition--switch__toggle = all 0.35s cubic-bezier(0.5,1.6,0.5,1)

/*! topdoc
  name: Switch
  class: switch
  modifiers:
    :focus: Focus state
    :disabled: Disabled state
  markup:
    <label class="switch">
      <input type="checkbox" class="switch__input">
      <div class="switch__toggle"></div>
    </label>
    <label class="switch">
      <input type="checkbox" class="switch__input" checked>
      <div class="switch__toggle"></div>
    </label>
    <label class="switch">
      <input type="checkbox" class="switch__input" disabled>
      <div class="switch__toggle"></div>
    </label>
*/

switch()
  inline-block()
  reset-box-model()
  hide-input-parent()

switch__input()
  hide-input()

switch__toggle()
  inline-block()
  reset-box-model()
  reset-base()
  reset-cursor()

switch--disabled()
  disabled()

.switch
  switch()
  font-size var-font-size
  padding 0 20px
  border none
  overflow visible
  width var-width--switch
  height var-height--switch
  border-radius var-switch--border-radius
  z-index 1
  text-align left

.switch__input
  switch__input()
  width var-width--switch
  height 44px
  margin-top -((44px-(var-height--switch))/2px)
  top 0px
  left 0px

// switch toggle background
.switch__toggle
  background-color var-switch-background-color
  width 50px
  position absolute
  z-index 0
  top 0px
  left 0px
  border-radius 30px
  height 32px
  transition var-transition--switch__toggle !important

// switch toggle circle
.switch__toggle:before
  position absolute
  content ''
  border-radius 28px
  height 28px
  width 28px
  background-color var-switch-thumb-background-color
  border none
  left 2px
  top 2px
  reset-box-model()
  transition var-transition--switch__toggle !important

.switch__input:checked + .switch__toggle
  background-color var-background-color--switch__label--checked

.switch__input + .switch__toggle:before
  margin-left 0px

.switch__input:checked + .switch__toggle:before
  margin-left 0px
  transform translateX(18px)
  border-color var-swtich-thumb-border-color-active

.switch__input:not(:checked) + .switch__toggle:before
  transform translateX(0px)


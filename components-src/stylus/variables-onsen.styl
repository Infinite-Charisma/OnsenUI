////////////////////////////////////////
// Text Area
////////////////////////////////////////
var-font-size--textarea = var-font-size
var-border--textarea = none
var-padding--textarea = none

////////////////////////////////////////
// Checkbox
////////////////////////////////////////
var-size--checkbox = 32px
var-border-radius--checkbox = 3px
var-top--checkmark = 7px
var-left--checkmark = 4px
var-width--checkmark__tail = 18px
var-height--checkmark__foot = 6px
var-border-radius--checkmark = 0px
var-border-width--checkmark = 6px
var-transform--checkmark = rotate(-45deg)

////////////////////////////////////////
// Radio
////////////////////////////////////////
var-size--radio-button = 30px
var-size--radio-button--checked = 14px
var-position--radio-button--checked = 7px

////////////////////////////////////////
// Search Input
////////////////////////////////////////
var-padding--search-input = 0 0 0 35px
var-padding--search-input--large = 0 0 0 46px


////////////////////////////////////////
// Tab-bar
////////////////////////////////////////
var-line-height--tab-bar__button = 48px
var-border-top--tab-bar--active = none
var-border-top--tab-bar--focus = none

var-font-size--list-header = .9em
var-font-weight--list-header = 400

/* Notification */
var-notification-width = 1.2rem
var-notification-height = 1.2rem
var-notification-padding = 0 0.4em 0

/* Search Input */
var-search-icon = url("../img/search.svg")
var-background-image--search-input = var-search-icon
/* Text Area */
var-font-size--textarea = 2.5rem
var-font-size--textarea--large = 3rem
/* Checkbox */
var-size--checkbox = 2rem
var-border-radius--checkbox = 3px
var-top--checkmark = 7px
var-left--checkmark = 4px
var-width--checkmark__tail = 18px
var-height--checkmark__foot = 6px

<div class="ons-navigator">
  <div ng-hide="hideToolbar" class="topcoat-navigation-bar ons-navigator__toolbar {{modifierTemplater('topcoat-navigation-bar--*')}}">
    <div class="ons-navigator__toolbar-content {{modifierTemplater('topcoat-navigation-bar--*__content')}}">
      <div class="ons-navigator__item topcoat-navigation-bar__bg ons-navigator__left-button-container ons-navigator__left-button-container--transition ons-navigator__left-button-container--hidden {{modifierTemplater('topcoat-navigation-bar--*__bg')}}">
        <span class="topcoat-icon-button--quiet ons-navigator__left-section">
          <i class="fa fa-angle-left fa-2x topcoat-navigation-bar__line-height {{modifierTemplater('topcoat-navigation-bar--*__line-height')}}"></i>
        </span>
      </div>
      <div class="ons-navigator__right-button ons-navigator__item">
        <span class="topcoat-icon-button--quiet ons-navigator__right-section-icon">
        </span>
      </div>
    </div>
  </div>

  <div class="ons-navigator__content topcoat-page__bg">
  </div>    
</div>

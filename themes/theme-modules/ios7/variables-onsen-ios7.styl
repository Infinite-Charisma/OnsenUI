var-background-color--checkmark = var-view-background
var-background-color--down--checkbox =  var-view-background
var-background-color-checked--checkbox = var-buttons
var-background-color--before--checkbox = var-buttons

/* Range input */
var-border--range = none
var-background-color--range = var-buttons
var-background-color--range__thumb = var-view-background
var-range-border = 1px solid var-borders
var-border--range__thumb--focus = 1px solid var-borders
var-height--range__track = 2px

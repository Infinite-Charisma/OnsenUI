var-line-height--switch__toggle = var-thumb-size
var-background-color--switch__label--left = var-switch-color
var-background-color--switch__label--right = var-borders
var-background-color--switch__toggle = var-view-background
var-border--switch__toggle = 1px solid var-borders
var-border--switch__toggle--focus = 1px solid var-borders
var-switch--border-radius = 30px
var-border-radius--switch__toggle = 50%
var-margin-left--switch__toggle = -19px

var-border-bottom--list-item--last = 1px solid var-borders
var-border-top--list-header = none
var-border-bottom--list-header = none
var-text-shadow--list-header = none
var-color--list-item = var-list-text-color
var-color--list-header = var-list-text-color
var-background-color--list-header = var-list-header-background-color
var-background-color--list-item = var-view-background
var-background-color--list-item--active = #BDBEC2
var-background-color--list = var-list-header-background-color
var-background-color--list-container = var-view-background

/* Overlay !!!*/
var-modal-bg-color = #e5e9e8
var-overlay__header-border = 1px solid #d3d7d7

/* Progress bar !!!*/
var-bar-bg-color = var-view-background
var-progress-bg-color = var-buttons //#e0f0fa

/* Checkbox */
var-width--checkmark__tail = 12px
var-border-width--checkmark = 4px

var-background-color--cta--down = transparent //lighten(var-cta-background-color, var-lighter) //#77bfee
var-background-color--cta--hover = transparent //lighten(var-cta-background-color, var-light) //#54ACE5
var-border--cta = none
var-box-shadow--cta = none
var-box-shadow--cta--down = none

/*Icon-Button*/
var-color--icon-button--quiet = var-buttons
var-color--icon-button--quiet--active = lighten(var-buttons, var-lighter)
var-background-color__icon-button--quiet = transparent
var-background-color--icon-button-quiet--down = transparent
var-background-color__icon-button = var-view-background
var-border--icon-button = none

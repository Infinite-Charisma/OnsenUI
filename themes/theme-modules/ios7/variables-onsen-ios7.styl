var-box-shadow--switch__label--after--checked = inset 0 0 0 0px rgba(0,0,0,0.4);
var-box-shadow--switch__label--after = inset 0 0 0 0px rgba(0,0,0,0.4);

/* Bar button */
var-border-top--button-bar__button = 1px solid var-buttons
var-border-bottom--button-bar__button = 1px solid var-buttons

/*! topdoc
  name: Button Bar
  description: Component of grouped buttons
  modifiers:
    :disabled: Disabled state
  markup:
    <p>Button Bar</p>
    <div class="topcoat-button-bar">
      <div class="topcoat-button-bar__item">
        <button class="topcoat-button-bar__button">One</button>
      </div>
      <div class="topcoat-button-bar__item">
        <button class="topcoat-button-bar__button">Two</button>
      </div>
      <div class="topcoat-button-bar__item">
        <button class="topcoat-button-bar__button">Three</button>
      </div>
    </div>

    <p>Large Button Bar</p>
    <div class="topcoat-button-bar">
      <div class="topcoat-button-bar__item">
        <button class="topcoat-button-bar__button--large">One</button>
      </div>
      <div class="topcoat-button-bar__item">
        <button class="topcoat-button-bar__button--large">Two</button>
      </div>
      <div class="topcoat-button-bar__item">
        <button class="topcoat-button-bar__button--large">Three</button>
      </div>
    </div>
*/

@require topcoat-button
@require '../../common/button-bar'

.topcoat-button-bar {
  @extend .button-bar
  margin: var-button-bar-margin;
  border: var-border--button-bar;
}

.topcoat-button-bar__item {
  @extend .button-bar__item
  border-top: var-border-top--button-bar__button;
  border-bottom: var-border-bottom--button-bar__button;
}

.topcoat-button-bar > .topcoat-button-bar__item:first-child {
  border-top-left-radius: var-border-radius;
  border-bottom-left-radius: var-border-radius;
}

.topcoat-button-bar > .topcoat-button-bar__item:last-child {
  border-top-right-radius: var-border-radius;
  border-bottom-right-radius: var-border-radius;
}

.topcoat-button-bar__item > input {
  @extend .button-bar__item > input
}

.topcoat-button-bar__item:first-child > .topcoat-button-bar__button,
.topcoat-button-bar__item:first-child > .topcoat-button-bar__button--large {
  border-left: var-border-left--button-bar__button__first;
  border-right: none;
  border-right: var-border-right--button-bar__button__first;
}

.topcoat-button-bar__item:last-child > .topcoat-button-bar__button,
.topcoat-button-bar__item:last-child > .topcoat-button-bar__button--large {
  border-left: none;
  border-right: var-border-right--button-bar__button__last;
}

.topcoat-button-bar__button {
  @extend .topcoat-button;
  border-radius: inherit;
  background-color: var-background-color--button-bar;
  color: var-color--button-bar--button;
  border: var-border--button-bar__button;
  border-right: var-border-right--button-bar__button;
}

.topcoat-button-bar__button:active,
.topcoat-button-bar__button--large:active,
:checked + .topcoat-button-bar__button {
  @extend .topcoat-button:active
  background-color: var-background-color--button-bar--button--active
  color: var-color--button-bar__button--active  
  border: var-border--button-bar__button;
  border-right: var-border-right--button-bar__button
  border-right: var-border-right--button-bar__button--active
}

.topcoat-button-bar__button:disabled {
  @extend .topcoat-button:disabled
}

.topcoat-button-bar__button:hover {
  @extend .topcoat-button:hover
  background-color: var-background-color--button-bar--button--hover
  color: var-color--button-bar__button--hover
}

.topcoat-button-bar__button:focus,
.topcoat-button-bar__button--large:focus {
  @extend .topcoat-button:focus
  z-index: 1;
  z-index: var-border-right--button-bar__button--z-index
  border-right: var-border-right--button-bar__button--focus;
}

.topcoat-button-bar__button--large {
  @extend .topcoat-button--large
  border-radius: inherit;
  background-color: var-background-color--button-bar;
  color: var-color--button-bar--button;
  border: var-border--button-bar__button;
  border-right: var-border-right--button-bar__button;
}

.topcoat-button-bar__button--large:disabled {
  @extend .topcoat-button:disabled
}

.topcoat-button-bar__button--large:hover {
  @extend .topcoat-button:hover
  background-color: var-background-color--button-bar--button--hover
  color: var-color--button-bar__button--hover
}
